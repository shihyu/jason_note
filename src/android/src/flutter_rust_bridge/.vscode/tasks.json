{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Rust",
            "command": "make",
            "args": ["build-rust"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$rustc"]
        },
        {
            "type": "shell",
            "label": "Test Rust",
            "command": "make",
            "args": ["test-rust"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$rustc"]
        },
        {
            "type": "shell",
            "label": "Test Flutter",
            "command": "make",
            "args": ["test-flutter"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "type": "shell",
            "label": "Run Flutter App",
            "command": "make",
            "args": ["run"],
            "group": "build",
            "presentation": {
                "echo": true,
