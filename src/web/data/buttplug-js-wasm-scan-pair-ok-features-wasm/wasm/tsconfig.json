{
  "compilerOptions" : {
    "baseUrl": "./src",
    "lib": ["es2020", "dom"],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "declaration": true,
    "outDir": "./dist/main",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}