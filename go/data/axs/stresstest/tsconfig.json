{
  "compilerOptions": {
    "target": "ES2020",         // 輸出目標為較新的 ES 版本
    "module": "ES2020",         // 使用 ES 模組
    "moduleResolution": "node", // 解析模組的方式
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,             // 開啟所有嚴格模式類型檢查 (推薦)
    "skipLibCheck": true,
    "outDir": "./dist"          // 輸出目錄 (但 Webpack 會覆蓋這個設定)
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/k6-extensions.d.ts"]
}
